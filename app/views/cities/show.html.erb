<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @city.name %>
</p>

<p>
  <strong>Lattitude:</strong>
  <%= @city.lattitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @city.longitude %>
</p>

<p>
  <strong>Current temperature :</strong>
  <% if @weatherTemperature %>
      <%= '%.2f' % @weatherTemperature %> &deg;C
  <% else %>
    Unavailable
  <% end %>
</p>

